<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.octopusbaby.basketball.dao.MemberDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->

    <!--添加球员-->
    <insert id="insertMember">
        insert into t_member (memberId, memberName, firstStart)
        values (#{memberId},#{memberName},#{firstStart});
    </insert>

    <!--查询所有球员信息-->
    <select id="queryAllMember" resultType="Member">
        select memberId,memberName,firstStart
        from t_member;
    </select>

    <!--查询指定球员信息-->
    <select id="queryByMemberId" resultType="Member">
        select memberId,memberName,firstStart
        from t_member
        where memberId=#{memberId};
    </select>

    <!--通过球员ID删除球员-->
    <delete id="delByMemberId">
        delete from t_member
        where memberId=#{memberId};
    </delete>

    <!--通过球员ID更改球员信息-->
    <update id="modifyByMemberId">
        update t_member
        set memberName = #{memberName} and firstStart=#{firstStart}
        where memberId=#{memberId};
    </update>

</mapper>